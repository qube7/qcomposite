<MenuItem x:Class="Application1.Menus.FileMenuView"
          xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
          xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
          xmlns:q="http://qube7.com/composite/xaml"
          xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
          xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
          xmlns:local="clr-namespace:Application1.Menus"
          mc:Ignorable="d"
          d:Class="{q:DesignClass local:FileMenuView}"
          d:DataContext="{d:DesignInstance local:FileMenuViewModel, IsDesignTimeCreatable=True}"
          q:Grouping.GroupIndex="0"
          Header="{q:Resource Header}">
    <MenuItem Header="{q:Resource Exit}"
              Command="{x:Static SystemCommands.CloseWindowCommand}"
              InputGestureText="Alt+F4" />
</MenuItem>
