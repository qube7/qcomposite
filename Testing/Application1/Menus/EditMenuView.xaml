<MenuItem x:Class="Application1.Menus.EditMenuView"
          xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
          xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
          xmlns:q="http://qube7.com/composite/xaml"
          xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
          xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
          xmlns:local="clr-namespace:Application1.Menus"
          mc:Ignorable="d"
          d:Class="{q:DesignClass local:EditMenuView}"
          d:DataContext="{d:DesignInstance local:EditMenuViewModel, IsDesignTimeCreatable=True}"
          q:Grouping.GroupIndex="1"
          Header="{q:Resource Header}">
    <MenuItem Header="{q:Resource Undo}"
              Command="{x:Static ApplicationCommands.Undo}" />
    <MenuItem Header="{q:Resource Redo}"
              Command="{x:Static ApplicationCommands.Redo}" />
    <Separator />
    <MenuItem Header="{q:Resource Cut}"
              Command="{x:Static ApplicationCommands.Cut}" />
    <MenuItem Header="{q:Resource Copy}"
              Command="{x:Static ApplicationCommands.Copy}" />
    <MenuItem Header="{q:Resource Paste}"
              Command="{x:Static ApplicationCommands.Paste}" />
</MenuItem>
